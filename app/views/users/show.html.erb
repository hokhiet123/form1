<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <br>
  <h3>Click here If you are Freelancer:
  <%= link_to "Điền thông tin", new_form_freelancer_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Xem thông tin", form_freelancers_path, class: "btn btn-lg btn-primary" %>
  </h3>
  <h3>Click here If you are Employee:
  <%= link_to "Điền thông tin", new_form_employee_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Xem thông tin", form_employees_path, class: "btn btn-lg btn-primary" %>
  </h3>
</div>